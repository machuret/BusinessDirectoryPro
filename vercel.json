{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "server/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/server/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}