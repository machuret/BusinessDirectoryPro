{
  "version": 2,
  "buildCommand": "bash vercel-build.sh",
  "outputDirectory": "server/public",
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}